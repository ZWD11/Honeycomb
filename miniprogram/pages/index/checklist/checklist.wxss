/* pages/index/checklist/checklist.wxss */
.container {
  padding: 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 20rpx;
}

.slogan {
  font-size: 32rpx;
  font-weight: bold;
}

.checklist {
  display: flex;
  flex-direction: column;
  padding-bottom: 140rpx;  /* 添加底部内边距 */
}

.checklist-item {
  margin-bottom: 20rpx;
  background-color: pink;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  
}

.item-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.check {
  flex: 1;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-name {
  font-size: 30rpx;
  font-weight: bold;
}

.icon-right {
  display: flex;
  align-items: center;
}

.right-arrow {
  width: 20rpx;
  height: 20rpx;
}

.item-description {
  font-size: 27rpx;
  color: #888;
  margin-top: 10rpx;
}

.add-button {
  position: fixed;
  bottom: 100rpx;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f06292;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
}

.add-img {
  width: 50rpx;
  height: 50rpx;
}

.tabBar {
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
  padding: 10rpx;
  background: pink;
  font-size: 24rpx;
  color: #8A8A8A;
  box-shadow: 3rpx 3rpx 3rpx 3rpx #aaa;
  z-index: 9999;
}

.tabBar-item {
  float: left;
  width: 50%;
  text-align: center;
  overflow: hidden;
}

.tabBar-icon {
  width: 54rpx;
  height: 54rpx;
  margin-bottom: 10rpx;
}

.button-group {
  display: flex;
  flex-direction: column;
}

.complete-button {
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  padding: 3rpx 20rpx;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 25rpx;
  margin: 2rpx 0;
  border-radius: 15rpx;
}

.delete-button {
  background-color: #da4b41; /* Red */
  border: none;
  color: white;
  padding: 3rpx 20rpx;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 25rpx;
  margin: 2rpx 0;
  border-radius: 15rpx;
}
