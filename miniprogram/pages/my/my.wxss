.my-page {
  background-color: #f5f6f7;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.user-info {
  background: linear-gradient(to bottom, #e0ffff, #cce0ff);
  padding: 60rpx 30rpx;
  text-align: center;
}

.avatar-wrap {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #fff;
  margin: 0 auto;
}

.avatar {
  width: 100%;
  height: 100%;
}

.username {
  font-size: 32rpx;
  color: #696969;
  margin-top: 20rpx;
}

.menu-list {
  background-color: #fff;
  margin-top: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.button-group {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}

.login-button, 
.logout-button {
  background: linear-gradient(to right, #4CAF50, #8BC34A);
  color: #fff;
  border-radius: 15rpx;
  padding: 5rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 2px 2px 5px #888888;
}
